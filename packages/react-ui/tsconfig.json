{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2017","dom"],
    "module": "es2015",
    "paths": { "*": [ "src/*", "typings/*" ] },
    "typeRoots": ["node_modules/@types", "typings"],
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [ "src" ],
  "compileOnSave": false
}
